generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Service {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  createdAt   DateTime @default(now())
  bookings    Booking[]
}

model Booking {
  id           Int      @id @default(autoincrement())
  customerName String
  customerPhone String
  serviceId    Int
  date         DateTime
  notes        String?
  createdAt    DateTime @default(now())

  service Service @relation(fields: [serviceId], references: [id])
}
